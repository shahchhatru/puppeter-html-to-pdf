<!DOCTYPE html>
<html>
<head>
<title><%= title %></title>
  <style>
*{
      margin:0px;
      box-sizing: border-box;
      padding:0px;
  }
html {
  -webkit-print-color-adjust: exact;
  width:100%;
  height:100%;
  font-family:'Courier New', Courier, monospace;

}
body{
  position:relative;
  width:100%;
  height:100%;
}
p {
  color: #FF0000; 
}
h1{
  width:100%;
  text-align: center;
  padding:20px;

}

.headerblock{
  padding:10px;
  border:solid;
  flex:1;
  text-align: center;
  font-size:20px;

}
.day{
  border:1px solid black;

}
.title{
  width:9%;
  padding:10px;
  border:solid;
  text-align: center;
  font-size:20px;
  height:auto;
}
.periods-block{
  width:90%;
  display:flex;
}
.period-container{
  display:flex;
  flex-direction: column;
}
.lectureroom-container{
  flex:1;
  display:flex;
  
}
.lectureroom-container:nth-child(1){
  flex:1;
}

.lectureroom-container:nth-child(2){
  flex:1;
}
.items{
  flex:1;
}

.tu-title{
  flex:1;
  background:greenyellow;
  width:100%;
  min-height: 40px;
  display:flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
  gap:4px;
}

.day-grid{
  display:grid;
  background:green;
  grid-template-columns: repeat(1fr,9);
  grid-template-rows: 75px 75px;
}

.routine-container{
  flex:1;
  display:grid;
  
  grid-template-columns: repeat(1fr,9);
  grid-template-rows:repeat(1fr,12);
  background:green;
}
  </style>
</head>



<body style="background-color: red !important;">


  
  
</ul>
<div style="margin:0px;border:solid;background-color:whitesmoke;display: flex; flex-direction: column;width:100%">
  <div class="tu-title">
    <span style="text-transform: capitalize; font-size: 1.5rem;">Tribhuvan University</span>
    <span style="text-transform: capitalize;">IOE,Pulchowk Campus</span>
    <span style="text-transform: capitalize;text-decoration: underline;">Department of Electronics and Computer Engineering</span>
    <span style="text-transform: capitalize;">Class Routine</span>
    <span><%= message %></span>
  </div>
  <div style="display: flex;">
    <div class="title">
      <p>Timing</p>
      <hr>
      <p>Days</p>
    </div>
    <div class="periods-block">
    <% [0,1,2,3,4,5,6,7].forEach(function(u) { %>
      <div class="headerblock">
        <span style="margin-bottom: 10px;"><%= summer_time[u] %>-<%= summer_time[u+1] %></span><br/>
        <span><%= winter_time[u] %>-<%= summer_time[u+1] %></span>
        
      </div>
    <% }); %>
  </div>
  </div>
  <div class="routine-container">
    <div class="day">
      Sunday
    </div>
    
      <% if (routines["sun"].length > 0) { %>
        <% routines["sun"].forEach(function(item, index) { %>
          <div class="headerblock" style="grid-column-start: <%= parseInt(item.starting_period_value)+1 %>; grid-column-end: <%= (parseInt(item.starting_period_value) + parseInt(item.no_of_period_value))+1 %>;">
            <%= item.subject %>
          </div>
        <% }); %>
      <% } %>
    
      <div class="day">
        Sun (alt)
      </div>
      
        <% if (altroutine["sun"].length > 0) { %>
          <% altroutine["sun"].forEach(function(item, index) { %>
            <div class="headerblock" style="grid-column-start: <%= parseInt(item.starting_period_value)+1 %>; grid-column-end: <%= (parseInt(item.starting_period_value) + parseInt(item.no_of_period_value))+1 %>;">
              <%= item.subject %>
            </div>
          <% }); %>
        <% } %>

        <div class="day" style="grid-row-start:3">
          Monday
        </div>
        
          <% if (routines["mon"].length > 0) { %>
            <% routines["mon"].forEach(function(item, index) { %>
              <div class="headerblock" style="grid-row-start:3;grid-column-start: <%= parseInt(item.starting_period_value)+1 %>; grid-column-end: <%= (parseInt(item.starting_period_value) + parseInt(item.no_of_period_value))+1 %>;">
                <%= item.subject %>
              </div>
            <% }); %>
          <% } %>

          <div class="day" style="grid-row-start:4">
            Mon (alt)
          </div>
          
            <% if (altroutine["mon"].length > 0) { %>
              <% altroutine["mon"].forEach(function(item, index) { %>
                <div class="headerblock" style="grid-row-start:4;grid-column-start: <%= parseInt(item.starting_period_value)+1 %>; grid-column-end: <%= (parseInt(item.starting_period_value) + parseInt(item.no_of_period_value))+1 %>;">
                  <%= item.subject %>
                </div>
              <% }); %>
            <% } %>
            <div class="day" style="grid-row-start:5">
              Tuesday
            </div>
            
              <% if (routines["tue"].length > 0) { %>
                <% routines["tue"].forEach(function(item, index) { %>
                  <div class="headerblock" style="grid-row-start:5;grid-column-start: <%= parseInt(item.starting_period_value)+1 %>; grid-column-end: <%= (parseInt(item.starting_period_value) + parseInt(item.no_of_period_value))+1 %>;">
                    <%= item.subject %>
                  </div>
                <% }); %>
              <% } %>

              <div class="day" style="grid-row-start:6">
                Tuesday (alt)
              </div>
              
                <% if (altroutine["tue"].length > 0) { %>
                  <% altroutine["tue"].forEach(function(item, index) { %>
                    <div class="headerblock" style="grid-row-start:6;grid-column-start: <%= parseInt(item.starting_period_value)+1 %>; grid-column-end: <%= (parseInt(item.starting_period_value) + parseInt(item.no_of_period_value))+1 %>;">
                      <%= item.subject %>
                    </div>
                  <% }); %>
                <% } %>

                <div class="day" style="grid-row-start:7">
                  Wednesday
                </div>
                
                  <% if (routines["wed"].length > 0) { %>
                    <% routines["wed"].forEach(function(item, index) { %>
                      <div class="headerblock" style="grid-row-start:7;grid-column-start: <%= parseInt(item.starting_period_value)+1 %>; grid-column-end: <%= (parseInt(item.starting_period_value) + parseInt(item.no_of_period_value))+1 %>;">
                        <%= item.subject %>
                      </div>
                    <% }); %>
                  <% } %>
  </div>
</div>
</div>
</body>
</html>